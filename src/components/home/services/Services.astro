---
import CallToAction from "@components/CallToAction.astro";
import ServiceCard from "./ServiceCard.astro";
import melina from "@assets/hero/melina.jpg";
import { CardDescription, CardTitle } from "@components/ui/card";
import Icon from "@components/Icon.astro";
---

<section
  class="max-w-[68rem] min-h-screen w-full z-20 pb-20 px-6 flex flex-col gap-4 justify-center"
>
  <header class="md:flex md:justify-between items-center gap-2 lg:gap-4 pb-6">
    <div
      data-aos="fade-left"
      data-aos-easing="ease"
      data-aos-duration="300"
      class=""
    >
      <CardTitle className="text-6xl pb-2">¿Que puedo hacer por vos?</CardTitle>
      <CardDescription className="text-lg text-wrap">
        Nuestro equipo puede ayudarte a construir tu proyecto digital.
      </CardDescription>
    </div>

    <div
      data-aos="zoom-out"
      data-aos-easing="ease"
      data-aos-delay="600"
      data-aos-duration="300"
      class="hidden md:block"
    >
      <CallToAction class:list={"w-auto"} href="/projects/">
        COTIZAR PRESUPUESTO
        <Icon icon="arrow-right" size="1.2em" />
      </CallToAction>
    </div>
  </header>
  <div
    class="flex w-full flex-col items-center justify-around md:flex-row gap-10"
  >
    <ServiceCard
      title="Diseño"
      description="Contruccion de Branding, identidad visual a medida. "
      image={melina}
      index={1}
    />
    <ServiceCard
      title="Desarrollo"
      description="Construcción de sitios web, aplicaciones móviles y aplicaciones web."
      image={melina}
      index={0}
    />

    <ServiceCard
      title="Mantenimiento"
      description="Mantenimiento de tu proyecto, actualizaciones y soporte técnico."
      image={melina}
      index={2}
    />
  </div>
  <div class="w-fit place-self-center md:hidden">
    <CallToAction href="/projects/">
      COTIZAR PRESUPUESTO
      <Icon icon="arrow-right" size="1.2em" />
    </CallToAction>
  </div>
</section>
