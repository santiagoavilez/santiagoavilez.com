---
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "@components/ui/card";
import { Image } from "astro:assets";
import melina from "@assets/hero/melina.jpg";

import { MoveUpRight } from "lucide-react";
---

<div class="flex">
    <div class="w-full min-w-72 relative aspect-video">
        <div
            class="w-2/3 z-30 absolute translate-x-[-15%] translate-y-[-50%] top-[50%] left-0 mr-0 rounded-xl"
        >
            <Card className="rounded-xl">
                <CardHeader>
                    <CardTitle> Solucionado </CardTitle>
                    <CardDescription>
                        Construcción de Sitio Web y Creación de Identidad
                        Visual.
                    </CardDescription>
                </CardHeader>
                <CardFooter> ver más </CardFooter>
            </Card>
        </div>
        <div
            class="w-full aspect-video z-0 hover:z-50 absolute translate-x-[15%] translate-y-[-50%] top-[50%] left-0"
        >
            <div class="relative h-full w-full">
                <Image
                    class="z-10 filter blur-[2px] backdrop-blur-xl w-full rounded-xl h-full"
                    src={melina}
                    width={500}
                    height={500}
                    alt={"coso"}
                />
                <div
                    class="absolute top-4 right-4 p-2 cursor-pointer bg-gray-200/50 rounded-full"
                >
                    <MoveUpRight size={50} />
                </div>
            </div>
        </div>
        <Card
            className=" aspect-square w-1/3 absolute  translate-x-[-50%] bg-transparent translate-y-[-50%] border-0 left-[50%] top-[50%] "
        >
            <!-- <div class="w-full h-full relative">
                <Image
                    class={"w-full rounded-full aspect-square filter backdrop-blur-sm blur-[2px] absolute z-10"}
                    src={melina}
                    width={500}
                    height={500}
                    alt={"coso"}
                />
                <div
                    class="rounded-full w-1/2 h-full rounded-l-none absolute bg-[#090B11] translate-x-[0%] translate-y-[-50%] left-[50%] top-[50%] z-50"
                >
                </div>
            </div> -->
        </Card>
    </div>
</div>
