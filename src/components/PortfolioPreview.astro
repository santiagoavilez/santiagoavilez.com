---
import type { ImageMetadata } from "astro";

import type { CollectionEntry } from "astro:content";
import LivePreviewProject from "./LivePreviewProject.astro";
import { Image } from "astro:assets";
import GithubProject from "./GithubProject.astro";

interface Props {
  index: number;
  project: CollectionEntry<"projects"> | CollectionEntry<"blog">;
}

const {
  index,
  project: { data, slug },
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
const previewImage = images[data.img];
if (!images[data.img])
  throw new Error(
    `"${data.img}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
---

<div
  data-aos={index ? "fade-left" : "fade-right"}
  class="w-full bg-gray-100 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
  <a href={`/projects/${slug}`}>
    <Image
      class="rounded-t-lg"
      width={data.img_w}
      height={data.img_h}
      format={"webp"}
      src={previewImage()}
      alt={data.img_alt || ""}
    />
  </a>
  <div class="p-5">
    <h3 class="pb-5">{data.title}</h3>
    <p class="my-3 font-normal text-gray-700 dark:text-gray-400">
      {data.description}
    </p>

    {
      (data?.live || data?.git) && (
        <div class="flex flex-row flex-wrap justify-start gap-2 pt-5">
          {data?.live && <LivePreviewProject href={data?.live} />}
          {data?.git && <GithubProject href={data?.git} />}
        </div>
      )
    }
  </div>
</div>

<style>
  .card {
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 11rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
  }

  .card:hover {
    box-shadow: var(--shadow-md);
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-999);
    color: var(--gray-200);
    border-radius: 0.375rem;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 50em) {
    .card {
      height: 22rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
  }
</style>
