---
interface Props {
	title: string;
	tagline?: string;
	align?: "start" | "center";
}
import "animate.css";
import AnimatedSpan from "./react/animatedSpan";
const { align = "center", tagline, title } = Astro.props;

const animatedTexts = ["atractivo", "impactante", "escalable"];
---

<header class:list={["hero stack gap-4 justify-center h-full", align]}>
	<div class="stack gap-2">
		<h1 class="title animate__animated animate__fadeInLeft">
			Transforma tu visión en un MVP, <AnimatedSpan
				client:load
				arrayText={animatedTexts}
			/> sin desperdiciar inversión.
		</h1>

		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-2xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-3xl);
		}
	}
</style>
